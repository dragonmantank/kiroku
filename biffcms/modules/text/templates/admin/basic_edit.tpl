<h2>Edit '{page_name}'</h2>

<form method="Post">
<table>
	<tr>
		<td><textarea name="page_text" cols=80 rows=30>{page_text}</textarea></td>
	</tr>
	<tr>
		<td align="right">
			<input type="submit" value="Save & Exit" name="save_exit"> 
			<input type="submit" value="Save & Reload" name="save_reload"> 
			<input type="submit" value="Cancel" name="cancel">
		</td>
	</tr>
</table>
</form>
